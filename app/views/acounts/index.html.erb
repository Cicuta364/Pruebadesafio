<p id="notice"><%= notice %></p>

<h1>Listing Acounts</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Charge</th>
      <th>Client</th>
      <th>Acount type</th>
      <th>Date</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acounts.each do |acount| %>
      <tr>
        <td><%= acount.description %></td>
        <td><%= acount.charge %></td>
        <td><%= acount.client %></td>
        <td><%= acount.acount_type %></td>
        <td><%= acount.date %></td>
        <td><%= acount.balance %></td>
        <td><%= link_to 'Show', acount %></td>
        <td><%= link_to 'Edit', edit_acount_path(acount) %></td>
        <td><%= link_to 'Destroy', acount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

